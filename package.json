  "version": "1.0.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "fmt": "yarn lint && yarn format",
    "format": "prettier --loglevel warn --write . ",
    "lint": "eslint . --ext ts --ext tsx --fix",
    "test": "jest",
    "test-all": "yarn lint && yarn type-check && yarn test",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "./node_modules/.bin/build-storybook",
    "generate": "graphql-codegen --config codegen.json",
    "chromatic": "chromatic --project-token 842c3ac9d921"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
